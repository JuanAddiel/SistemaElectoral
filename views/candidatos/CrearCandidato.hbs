                <label for="foto" class="puesto-label"><i class="fa-solid fa-image"></i></label>
                <input type="text" placeholder="Foto del mismo" id="foto" class="puesto-input" name="Cfoto" value="{{#if editMode}}{{candidatos.foto}}{{/if}}">
            </div>
            {{#if editMode}}
            <input type="hidden" name="puestoId" value="{{candidatos.id}}">
            {{/if}}
